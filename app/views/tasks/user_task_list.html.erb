
<h2> User Task List</h2>



<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Task's List</h3>

        <div class="box-tools">


          <div style="display:inline-block;float:left;margin-right: 10px; ">
            <!--            <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">Add Attendence</button>-->
          </div>


        </div>


      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tbody>
          <tr>

            <th>Task ID</th>
            <th>Task Title</th>
            <th>Project Title</th>
            <th>Description</th>
            <th>Duedate</th>

            <th colspan="3"> Actions</th>
            <% @user_task_list.each do |task| %>
            <tr>
              <th><%=task.id %></th>
              <td><%= task.title %></td>
              <td><%= task.project.title %></td>
              <td><%= task.description %></td>
              <td><%= task.duedate %></td>
              <td><%= link_to 'Show', task ,class:"btn btn-sm  btn-primary", style:"color:white" %></td>
              <td><%= link_to 'Edit', edit_task_path(task),class:"btn btn-sm btn-warning" %></td>
              <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-sm btn-danger"  %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
