<div class="container employee-attendence-overflow">

  <div class="row">
    <div class="col-md-10 col-md-offset-2">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"> Assign Task to User </h3>

          <div class="box-tools">


            <div style="display:inline-block;float:left;margin-right: 10px; ">
              <!--              <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">Find Attendence</button>-->
            </div>

          </div>

        </div>
      </div>

      <!-- /.box-header -->
      <div >
        <div class="box-body table-responsive custom-style table no-padding">
          <table class="table table-hover" style="background-color: white" >
            <tbody>
            <tr>

              <th>Task ID</th>
              <th>Task Title</th>
              <th>Project Title</th>
              <th>Description</th>
              <th>Task State</th>
              <th>Duedate</th>


                <th colspan="3"> Actions</th>


              <% @user_tasks.each do |task| %>
                <tr>
                  <th><%=task.id %></th>
                  <td><%= task.title %></td>
                  <td><%= task.project.title %></td>

                  <td><%= task.description %></td>
                  <td><%=task.state %>
                  <td><%= task.duedate %></td>

                  <%if current_user.role.name=="Admin" %>
                    <td><%= link_to 'Show', task ,class:"btn btn-sm  btn-primary", style:"color:white" %></td>
                    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-sm btn-danger"  %></td>
                  <%end%>

                  <td><%= link_to 'Edit', edit_task_path(task),class:"btn btn-sm btn-warning" %></td>

                </tr>

              <% end %>
              </tbody>
          </table>
        </div>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->

  </div>
</div>



</div>






































