  <section class="content-header">
    <h1 style="margin-left: 230px;float: left">
      Dashboard
      <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Project_Tasks</a></li>
      <li class="active">Dashboard</li>
      <li class="active"><%= link_to 'Back', :back %></li>
    </ol>
  </section>

<%end %>


<div style="color: white;float:left"><%=link_to "Back", users_path, class:"btn btn-sm btn-default" %></div>
<br>


<div class="container project-overflow">

  <div class="row">
    <div class="col-md-10 col-md-offset-2">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"> Project Tasks list</h3>

          <div class="box-tools">

            <%#if params[:add]== "attendence" %>
<!--              <div style="display:inline-block;float:left;margin-right: 10px; ">-->
<!--                <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">Add Attendence</button>-->
<!--              </div>-->
            <%#end %>

          </div>

        </div>
      </div>

      <!-- /.box-header -->
      <div >
        <div class="box-body table-responsive  custom-style no-padding">
          <table class="table table-hover" style="background-color: white">
            <tbody>
            <tr>
              <th> Task ID</th>
              <th>Project Title</th>
              <th>Task Title</th>
              <th>Description</th>
              <th>Duedate</th>
              <th colspan="3">Options</th>
            </tr>

            <% @tasks.each do |task| %>
              <tr>
                <th><%=task.id %></th>
                <td><%= task.project.title %></td>
                <td><%= task.title %></td>
                <td><%= task.description %></td>
                <td><%= task.duedate %></td>
                <!--            <td><%#= link_to 'Asign Task'  ,class:"btn btn-info btn-sm ", "data-toggle":"modal", "data-target":"#myModal" %></td>-->
                <td><%= link_to 'Show', task, class:"btn btn-sm btn-primary", style:"color:white" %></td>

                <%if current_user.role.name=="Admin" %>

                  <td><%= link_to 'Edit', edit_task_path(task) ,class:"btn btn-sm btn-warning" %></td>
                  <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-sm btn-danger" %></td>

                <%end %>
              </tr>
            <% end %>
            </tbody>
          </table>

        </div>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>