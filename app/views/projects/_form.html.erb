<div class="container">

  <div class="row">
    <div class="col-md-10 col-md-offset-2">
      <div class="box">
        <div class="box-header">

          <%if params[:add_project]  %>

            <h3 class="box-title"> Add New Project </h3>

          <% else %>

            <h3 class="box-title"> Edit Project </h3>

            <%end%>

          <div class="box-tools">


            <div style="display:inline-block;float:left;margin-right: 10px; ">
              <!--  <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">Find Attendence</button>-->
            </div>

          </div>

        </div>
      </div>

      <!-- /.box-header -->
      <div >
        <div class="box-body table-responsive no-padding">
          <%= form_with(model: project, local: true) do |form| %>

            <% if project.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

                <ul>
                  <% project.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group has-feedback">
               <%= form.label :title %>
               <%= form.text_field :title,class:"form-control" %>
            </div>

            <div class="form-group has-feedback">
              <%= form.label :start_date %>
              <%= form.date_select :start_date, class:"form-control" %>
            </div>

            <div class="form-group has-feedback">
              <%= form.label :description %>
              <%= form.text_area :description,class:"form-control"%>
            </div>


            <% if params[:action]=="create"%>

              <div class="form-group has-feedback">
                <%= form.label :user  %>
                <%=collection_select(:project, :user_ids, User.all, :id ,:name,{},{:multiple => true})%>
              </div>

            <%end %>

            <div class="actions">
              <%= form.submit class:"btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
