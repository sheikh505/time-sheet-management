<%if current_user.role.name== "Admin" %>>

  <div style="margin-top:40px" class="container">

    <div class="modal fade" id="myModal"  role="dialog">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">

          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Add Attendence of User</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">

            <%= form_for(@attendence) do |form| %>
              <%#= hidden_field_tag :user_id, current_user.id %>

              <%# debugger %>


              <div class="form-group">
                <label for="sel1"><%= form.label :datee %></label>
                <%= form.date_select :datee, class:"form-control pull-right", id:"datepicker" %>
              </div>


              <div class="form-group">


              </div>


              <% if form.object.check_in.blank? %>

                <div class="form-group">

                  <%= form.label :check_in %>


                  <%= form.time_select :check_in,class:"form-control" %>
                </div>

              <% else %>

                <div class="form-group">
                  <%= form.label :check_out %>
                  <%= form.time_select :check_out,class:"form-control" %>
                </div>

              <%end %>

              <div class="form-group">
                <%= form.label :status %>
                <%= form.check_box :status %>
              </div>

              <div class="form-group">

                <%if current_user.role.name == "Admin"  %>

                  <%= form.label :user_id unless current_user.role.name=="Admin"%>
                  <%=form.collection_select(:user_id,User.all,:id ,:id,prompt: true, ) %>

                <% end %>
              </div>

              <%#= label_tag :Month %>
              <%#= select_tag(:month, options_for_select([["january",1],["febury",2],["March",3],["April",4],["May",5],["June",6],["July",7],["Aguest",8],["September",9],["October",10],["November",11],["December",12]], params[:month] ), class:"select") %>
              <%#= select_tag(:year, options_for_select([["2017",1],["2018",2],["2019",3]], params[:year] ), class:"select") %>
              <%#=select_tag(:month, Date.today, options_for_select("Januar" ,"Februar", "March" ,"April" ,"May", "june" ,"july" ,"Auguest" ,"September" ,"October", "November", "December" ))%><%#= select_tag(:year, Date.today, :start_year => Date.today.year) %>
              <div class="actions">
                <br>
                <%= form.submit "Create", class:"btn btn-success pull-left" %>
              </div>


              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>

            <% end %>

          </div>


          <!-- Modal footer -->

        </div>
      </div>
    </div>


